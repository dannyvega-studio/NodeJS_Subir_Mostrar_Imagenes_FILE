extends ../../layout.pug
block contenido
    div(class="col-md-6 remove-float center-block big-top-space")    
        h1 Subir Imagenes
        form(action="/app/imagenes" method="POST" enctype="multipart/form-data")
            div(class="form-group")
                label(for="title") Titulo
                input(class="form-control", type="text", name="title", placeholder="Titulo de la imagen", id="title")
            div(class="form-group")
                label(for="archivo") Imagen
                input(class="form-control", type="file", name="archivo", id="archivo")
            
            div(class="row top-space")
                div(class="col-xs-12 col-sm-6")
                    input(type="submit", value="Upload" class="btn btn-info")
            